#include <iostream>
#include<thread>
#include<future>
#include<string>
using namespace std;

string f()
{
    string name;
    cin >> name;
    return name;
}

bool w = false;
string s;
void c()
{
    while(!w)
    {
        this_thread::sleep_for(1ms);
    }
    cout << "Добро пожаловать, " << s;
    return;
}

int main()
{
    thread t(c);
    auto username = async(launch::async, f);
    username.wait();
    s = username.get();
    w = true;
    t.join();
}
